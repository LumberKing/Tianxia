			religion = ROOT
			has_province_modifier = temple_corruption
		}
	}

	immediate = {
		random_demesne_province = {
			limit = {
				religion = ROOT
				has_province_modifier = temple_corruption
			}
			province_event = { id = SoH.3507 }
		}
	}
}

