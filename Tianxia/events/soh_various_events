### Minor events

# Kung fu monks
character_event = {
	id = SoH.180
	desc = EVTDESC_SoH_180
	picture = GFX_evt_meditating_in_temple

	is_triggered_only = yes
	
	ai = no
	
	trigger = {
		has_dlc = "Rajas of India"
		capital_scope = {
			OR = {
				empire = { title = e_china }
				empire = { title = e_korea }
				empire = { title = e_tibet }
				empire = { title = e_khmer }
				empire = { title = e_vietnam }
				empire = { title = e_nusantara }
			}
		}
		NOT = { trait = in_hiding }
	}

	option = {
		name = EVTOPTA_SoH_180
		random = {
			chance = 30
			change_martial = 1
		}
	}
	option = {
		name = EVTOPTB_SoH_180
		trigger = {
			NOT = {
				trait = paranoid
				trait = wroth
			}
		}
		if = {
			limit = { trait = paranoid }
			random = {
				chance = 50
				add_trait = wroth
			}
		}
		if = {
			limit = { NOT = { trait = paranoid } }
			random = {
				chance = 50
				add_trait = paranoid
			}
		}
	}
}

# Tolerant character making Chinese friend
character_event = {
	id = SoH.400
	desc = EVTDESC_SoH_400
	picture = GFX_evt_courtiers_talking
	border = GFX_event_normal_frame_religion

	is_triggered_only = yes
	
	only_rulers = yes
	only_capable = yes
	prisoner = no
	min_age = 16
	
	trigger = {
		has_dlc = "Rajas of India"
		trait = sympathy_chinese
		any_realm_character = {
			religion_group = chinese_group
			NOT = { is_friend = ROOT }
		}
	}
	
	option = {
		name = EVTOPTA_SoA_400
		random_realm_character = {
			limit = {
				religion_group = chinese_group
			}
			add_friend = ROOT
		}
	}
}

# Visit Taixue University?
character_event = {
	id = SoH.401
	desc = EVTDESC_SoH_401
	picture = GFX_evt_india_temple
	border = GFX_event_normal_frame_religion

	is_triggered_only = yes
	
	ai = no
	prisoner = no
	only_capable = yes
	min_age = 16
	
	trigger = {
		has_dlc = "Rajas of India"
		prestige = 100
		in_command = no
		capital_scope = {
			OR = {
				empire = { title = e_china }
				empire = { title = e_korea }
				empire = { title = e_tibet }
				empire = { title = e_khmer }
				empire = { title = e_vietnam }
				empire = { title = e_nusantara }
			}
		}
		OR = {
			religion_group = chinese_group
			trait = sympathy_chinese
		}
		NOT = { has_character_flag = do_not_disturb }
		NOT = { trait = in_hiding }
	}
	
	option = {
		name = EVTOPTA_SoH_401
		scaled_wealth = -0.05
		set_character_flag = do_not_disturb
		hidden_tooltip = { narrative_event = { id = SoH.402 days = 20 } }
	}
	option = {
		name = EVTOPTB_SoH_401
		piety = -5
	}
}

# Visiting Taixue University
narrative_event = {
	id = SoH.402
	title = EVTNAME_SoH_402
	desc = EVTDESC_SoH_402
	picture = GFX_evt_india_temple
	border = GFX_event_narrative_frame_religion

	is_triggered_only = yes

	option = {
		name = EVTOPTA_SoH_402
		random = {
			chance = 50
			change_stewardship = 1
		}
		clr_character_flag = do_not_disturb
	}
	option = {
		name = EVTOPTB_SoH_402
		if = {
			limit = {
				NOT = { lifestyle_traits = 1 }
				NOT = { has_dlc = "Way of Life" }
			}
			random = {
				chance = 50
				add_trait = scholar
			}
		}
		random = {
			chance = 30
			change_learning = 1
		}
		clr_character_flag = do_not_disturb
	}
	option = {
		name = EVTOPTC_SoH_402
		trigger = {
			NOT = { trait = cynical }
		}
		piety = 30
		if = {
			limit = { NOT = { trait = zealous } }
			random = {
				chance = 50
				add_trait = zealous
			}
		}
	}
}

# Visit the Yangtze?
character_event = {
	id = SoH.403
	desc = EVTDESC_SoH_403
	picture = GFX_evt_india_temple
	border = GFX_event_normal_frame_religion

	is_triggered_only = yes
	
	ai = no
	only_capable = yes
	prisoner = no
	
	trigger = {
		has_dlc = "Rajas of India"
		in_command = no
		religion_group = chinese_group
		NOT = { has_character_flag = do_not_disturb }
		NOT = { trait = in_hiding }
		capital_scope = {
			NOT = {
				distance = {
					where = 1319 # Bikrampur
					value = 100	# Means we live fairly near the Yangtze
				}
			}
		}
	}
	
	option = {
		name = EVTOPTA_SoH_403
		clr_character_flag = do_not_disturb
		scaled_wealth = -0.1
		hidden_tooltip = { character_event = { id = SoH.404 days = 20 } }
	}
	option = {
		name = EVTOPTB_SoH_403
		piety = -5
	}
}

# Visiting Yangtze
