# Province converts to other religion!
character_event = {
	id = SoH.3520

	hide_window = yes
	
	is_triggered_only = yes
	
	trigger = {
		has_dlc = "Rajas of India"
		religion_group = chinese_group
		NOT = { religion_authority = 0.3 }
		any_independent_ruler = {
			any_realm_province = {
				religion_group = chinese_group
				NOT = { religion = ROOT }
				religion_authority = 0.7
			}
		}
		any_demesne_province = {
			religion = ROOT
		}
	}

	immediate = {
		random_demesne_province = {
			limit = { religion = ROOT }
			province_event = { id = SoH.3521 }
		}
	}
}

# Province bounce event
province_event = {
	id = SoH.3521

	hide_window = yes
	
	is_triggered_only = yes
	
	immediate = {
		if = {
			limit = {
				any_neighbor_province = {
					religion_group = chinese_group
					NOT = { religion = ROOT }
				}
			}
			random_neighbor_province = {
				limit = {
					religion_group = chinese_group
					NOT = { religion = ROOT }
				}
				ROOT = {
					religion = PREV
				}
			}
		}
		if = {
			limit = {
				religion = confucian
				NOT = {
					any_neighbor_province = {
						religion_group = chinese_group
						NOT = { religion = ROOT }
					}
				}
			}
			random_list = {
				10 = { religion = amidist }
				10 = { religion = taoist }
			}
		}
		if = {
			limit = {
				religion = amidist
				NOT = {
					any_neighbor_province = {
						religion_group = chinese_group
						NOT = { religion = ROOT }
					}
				}
			}
			random_list = {
				10 = { religion = confucian }
				10 = { religion = taoist }
			}
		}
		if = {
			limit = {
				religion = taoist
				NOT = {
					any_neighbor_province = {
						religion_group = chinese_group
						NOT = { religion = ROOT }
					}
				}
			}
			random_list = {
				10 = { religion = confucian }
				10 = { religion = taoist }
			}
		}
		FROM = { character_event = { id = SoH.3525 } }
	}
}

character_event = {
	id = SoH.3525
	desc = EVTDESC_SoH_3525
	picture = GFX_evt_india_temple
	border = GFX_event_normal_frame_religion

	is_triggered_only = yes

	option = {
		name = EVTOPTA_SoH_3535
		tooltip = { FROM = { religion = FROM } }
	}
}

# Temple corruption removed - non-Chinese
province_event = {
	id = SoH.3550

	hide_window = yes
	
	trigger = {
		has_province_modifier = temple_corruption
		owner = {
			NOT = { religion_group = chinese_group }
		}
	}
	
	mean_time_to_happen = {
		days = 1
	}

	immediate = {
		remove_province_modifier = temple_corruption
	}
}

